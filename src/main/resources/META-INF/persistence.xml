<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="cocina-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades -->
        <class>com.dawb.finaldawb.domain.Role</class>
        <class>com.dawb.finaldawb.domain.Usuario</class>
        <class>com.dawb.finaldawb.domain.EstadoUsuario</class>
        <class>com.dawb.finaldawb.domain.Receta</class>
        <class>com.dawb.finaldawb.domain.RecetaPaso</class>
        <class>com.dawb.finaldawb.domain.RecetaTag</class>
        <class>com.dawb.finaldawb.domain.RecetaTagId</class>
        <class>com.dawb.finaldawb.domain.Tag</class>
        <class>com.dawb.finaldawb.domain.Lugar</class>
        <class>com.dawb.finaldawb.domain.Objeto</class>
        <class>com.dawb.finaldawb.domain.Comentario</class>
        <class>com.dawb.finaldawb.domain.Tipo</class>
        <class>com.dawb.finaldawb.domain.Recomendacion</class>


        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver" />

            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/cocina" />

            <property name="jakarta.persistence.jdbc.user" value="root" />

            <property name="jakarta.persistence.jdbc.password" value="020320" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect" />

            <property name="hibernate.hbm2ddl.auto" value="update" />

            <property name="jakarta.persistence.schema-generation.database.action" value="none" />

            <property name="hibernate.show_sql" value="true" />

            <property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>
